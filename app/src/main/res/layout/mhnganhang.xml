                android:text="200 Le Duan" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_distance4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#FFFFFF"
            android:text="800m" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:gravity="center_vertical"
        android:background="#673AB7"
        android:layout_marginTop="2dp">

        <ImageView
            android:id="@+id/iv_logo5"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:src="@drawable/bidvlogo"
            android:layout_marginEnd="16dp"
            android:contentDescription="@null" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_bank_name5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ngân hàng BIDV"
                android:textColor="#FFFFFF"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_address5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#FFFFFF"
                android:text="200 Le Duan" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_distance5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#FFFFFF"
            android:text="800m" />

    </LinearLayout>

</LinearLayout>